{
  "name": "la-recolte-node-template",
  "description": "Node Template Service - La RÃ©colte Digitale",
  "main": "src/server.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/la-recolte/node-template.git"
  },
  "dependencies": {
    "api-query-params": "4.13.0",
    "axios": "0.18.0",
    "body-parser": "1.18.2",
    "cors": "2.8.4",
    "express": "4.16.2",
    "kafka-node": "4.1.3",
    "mongoose": "5.7.11",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "audit-ci": "2.4.1",
    "jest": "24.0.0",
    "jest-cli": "24.0.0",
    "jest-html-reporter": "2.4.4",
    "nodemon": "1.18.3",
    "supertest": "^4.0.2",
    "superagent": "^5.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx}"
    ],
    "coverageDirectory": "./test/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report",
          "outputPath": "./test/test-report.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true
        }
      ]
    ]
  },
  "scripts": {
    "audit": "audit-ci -h",
    "test": "jest --watchAll",
    "test:integration:run": "jest --forceExit",
    "test:integration:watch": "jest --watchAll",
    "watch": "nodemon --legacy-watch src/server.js",
    "start": "node src/server.js",
    "watch-worker": "nodemon --legacy-watch worker/index.js",
    "start-worker": "node worker/index.js"
  }
}
