{
  "name": "la-recolte-node-template",
  "description": "Node Template Service - La RÃ©colte Digitale",
  "main": "src/server.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/la-recolte/node-template.git"
  },
  "dependencies": {
    "api-query-params": "4.15.0",
    "axios": "0.19.2",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "kafka-node": "5.0.0",
    "mongoose": "5.9.10",
    "npm-check-updates": "4.1.2",
    "winston": "3.2.1",
    "@la-recolte/error-middleware": "0.1.4"
  },
  "devDependencies": {
    "@sentry/integrations": "5.15.5",
    "@sentry/node": "5.15.5",
    "audit-ci": "2.5.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "25.4.0",
    "jest-cli": "25.4.0",
    "jest-html-reporter": "3.1.0",
    "nodemon": "2.0.3",
    "superagent": "5.2.2",
    "supertest": "4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx}"
    ],
    "coverageDirectory": "./test/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report",
          "outputPath": "./test/test-report.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true
        }
      ]
    ]
  },
  "scripts": {
    "audit": "audit-ci -h",
    "format": "npx prettier-standard src/**/*.js",
    "lint": "npx eslint ./src",
    "lint:fix": "npx eslint ./src --fix",
    "test": "npx jest --runInBand --forceExit --coverage",
    "test:watch": "npx jest --watchAll --runInBand",
    "test:integration:run": "npx jest integration --detectOpenHandles --forceExit --verbose false",
    "test:integration:watch": "npx jest --watchAll --runInBand",
    "start": "node src/server.js",
    "watch": "nodemon --legacy-watch src/server.js"
  }
}
